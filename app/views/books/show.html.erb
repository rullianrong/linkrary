<nav class="navbar bg-light">
  <div class="container-fluid">
    <%= link_to "Linkrary", root_path, class: "navbar-brand mb-0 h1 brand" %>
  </div>
</nav>
<div class="px-3"> 
    <p class="display-6 mb-2"><%= @book.title %></p>
    <%= link_to @book.link, "http://www.#{@book.link}", :target => "_blank", class: "text-muted d-block mb-5"  %>
</div> 
<div class="px-3">
  <%= link_to "Edit", edit_book_path(@book) %>
  <%= link_to "Delete", book_path(@book),
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete this book?" } %>
</div>